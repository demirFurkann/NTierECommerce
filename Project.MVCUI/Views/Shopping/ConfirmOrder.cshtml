@model OrderPageVM
@{
    ViewBag.Title = "ConfirmOrder";
}

<div>

    @using (Html.BeginForm())
    {

        <div class="form-group">
            <label class="col-sm-2 control-label">Gönderim Adresi</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippingAddress, new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.PaymentRM.CardNumber, new { @class = "form-control" })
            </div>

        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Güvenlik Numarası </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentRM.SecurityNumber, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Geçerlilik Süresi </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentRM.CardExpiryYear, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Geçerlilik Süresi(Ay) </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentRM.CardExpiryMonth, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Üzerindeki İsim </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentRM.CardUserName, new { @class = "form-control" })

            </div>
        </div>

        if (Session["member"] == null)
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">Email </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Order.NonMemberEmail, new { @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">İsim SoyIsim </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Order.NonMemberName, new { @class = "form-control" })

                </div>
            </div>

        }
        <div class="form-group">
            <label class="col-sm-2 control-label">Onaylamak İçin Tıklayınız</label>
            <div class="col-sm-10">
                <button class="btn btn-primary">Onayla</button>

            </div>
        </div>


    }



</div>

